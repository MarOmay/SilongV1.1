<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nighty"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="5dp"
    android:weightSum="3"
    tools:context=".PersonalInformationSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.35"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="back"
                android:src="@drawable/ic_round_arrow_back_ios_24"
                app:tint="@color/textgray"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:text="Personal Information"
                android:textColor="@color/gray"
                android:textSize="28sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="5dp"
                android:foreground="@drawable/ic_round_camera_alt_24"
                android:foregroundGravity="center"
                android:foregroundTint="@color/textgray"
                app:cardCornerRadius="100dp"
                tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck">

                <ImageView
                    android:id="@+id/newPictureIv"
                    android:onClick="onPressedAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/lightgray"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    tools:ignore="SpeakableTextPresentCheck" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maximum file size: 1MB"
                android:textAlignment="center"
                android:textSize="13sp"
                android:alpha="0.7"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="First Name"
                    android:textColor="@color/textgray"
                    android:textSize="13sp"
                    android:paddingStart="10dp"/>

                <EditText
                    android:id="@+id/newFnameEt"
                    style="@style/textField_style"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:hint="First Name" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Last Name"
                    android:textColor="@color/textgray"
                    android:textSize="13sp"
                    android:paddingStart="10dp"/>

                <EditText
                    android:id="@+id/newLnameEt"
                    style="@style/textField_style"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Last Name" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Gender"
                    android:textColor="@color/textgray"
                    android:textSize="13sp"
                    android:paddingStart="10dp"/>

                <com.silong.CustomView.GenderSpinner
                    android:id="@+id/newGenderEt"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Gender"
                    android:inputType="text"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Birthday"
                    android:textColor="@color/textgray"
                    android:textSize="13sp"
                    android:paddingStart="10dp"/>

                <EditText
                    android:id="@+id/newBirthdayEt"
                    android:onClick="onPressedBirthday"
                    style="@style/textField_style"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                    android:drawableTint="@color/textgray"
                    android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Birthday"
                    android:inputType="date" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="25dp">

        <Button
            android:id="@+id/personalSaveChangesBtn"
            android:onClick="onPressedSave"
            style="@style/pinkButton_style"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="save changes" />

    </LinearLayout>

</LinearLayout>